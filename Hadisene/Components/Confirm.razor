@rendermode @(new InteractiveServerRenderMode(prerender: false))
@* @inject BlazoredModalInstance Modal *@

<p>Please click one of the buttons below to close or cancel the modal. @imgSrc</p>
<div style="">
    <img src="@imgSrc" />
</div>
<button @onclick="Close" class="btn btn-primary">Close</button>
<button @onclick="Cancel" class="btn btn-secondary">Cancel</button>

@code {
    [CascadingParameter] BlazoredModalInstance Modal { get; set; } = default!;
    [Parameter] public string? imgSrc { get; set; }

    async Task Close() => await Modal.CloseAsync(ModalResult.Ok(true));
    async Task Cancel() => await Modal.CancelAsync();

}