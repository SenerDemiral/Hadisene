<h5 style="color:red;padding-inline:8px;">@m0: @m1</h5>

@code {
	[Parameter] public string? Message { get; set; }

	private string m0 = "";
	private string m1 = "";

	protected override void OnInitialized()
	{
		string[] sa;
		if (!String.IsNullOrEmpty(Message))
		{
			sa = Message.Split("\r\n");
			if (sa.Length > 2)
			{
				m0 = sa[0];
				m1 = sa[1];
			}
			else if (sa.Length == 1)
			{
				m0 = sa[0];
				m1 = "";
			}
		}
	}
}
