				 Value="selVal"
				 ValueChanged="MenuChange"
				 ValueExpression="@(() => selVal)">
		<option value="">🏠 HOME</option>
		@if (my.Id != 0)
		{
			<option value="ordActive/0/all">🚧 Talepler &nbsp;&nbsp;</option>
			<option value="OrdStat">📈 Özet</option>
			@if (my.FPS)
			{
